{
  "dxt_version": "0.2",
  "name": "@straddlecom/straddle-mcp",
  "version": "0.1.0",
  "description": "The official MCP Server for the Straddle API",
  "author": {
    "name": "Straddle",
    "email": "help@straddle.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/straddleio/straddle-node.git"
  },
  "homepage": "https://github.com/straddleio/straddle-node/tree/main/packages/mcp-server#readme",
  "documentation": "https://docs.straddle.com",
  "server": {
    "type": "node",
    "entry_point": "index.js",
    "mcp_config": {
      "command": "node",
      "args": ["${__dirname}/index.js"],
      "env": {
        "STRADDLE_API_KEY": "${user_config.STRADDLE_API_KEY}"
      }
    }
  },
  "user_config": {
    "STRADDLE_API_KEY": {
      "title": "api_key",
      "description": "Use your Straddle API Key in the Authorization header as Bearer <token> to authorize API requests.",
      "required": true,
      "type": "string"
    }
  },
  "tools": [],
  "tools_generated": true,
  "compatibility": {
    "runtimes": {
      "node": ">=18.0.0"
    }
  },
  "keywords": ["api"]
}
